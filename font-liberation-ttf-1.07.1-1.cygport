inherit font

DESCRIPTION="Replacements for Arial, Courier, and Times New Roman fonts"
HOMEPAGE="https://fedorahosted.org/liberation-fonts/"
SRC_URI="https://fedorahosted.org/releases/l/i/liberation-fonts/liberation-fonts-${PV}.tar.gz"
SRC_DIR="liberation-fonts-${PV}"

src_compile() {
	lndirs
	cd ${B}
	sfd2ttf src/*.sfd
}

src_test() { :; }

src_install() {
	cd ${B}
	fontinto TTF
	dofont *.ttf
}
